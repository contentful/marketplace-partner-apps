{
  "name": "@contentful/marketplace-partner-apps",
  "private": false,
  "engines": {
    "node": ">=16.0.0 < 18.0.0",
    "npm": ">= 8.0.0 < 9.0.0"
  },
  "packageManager": "npm@8.19.4",
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.2.1",
    "prettier": "2.8.7"
  },
  "scripts": {
    "test-apps": "lerna run test --concurrency=1 --stream --since main",
    "build-apps": "lerna run build --concurrency=1 --stream --since main",
    "build-apps:deploy": "lerna run build --concurrency=1 --stream --since $(git merge-base origin/master HEAD)",
    "install-apps": "lerna run install-ci --concurrency=1 --stream --since main",
    "install-apps:deploy": "lerna run install-ci --concurrency=1 --stream --since $(git merge-base origin/master HEAD)",
    "deploy:staging": "lerna run deploy:staging --concurrency=3 --since $(git merge-base origin/master HEAD)",
    "deploy:production": "lerna run deploy --concurrency=3",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{t,j}s?(x)": [
      "prettier --write"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "lerna": "^6.6.1"
  }
}