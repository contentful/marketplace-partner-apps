{
  "extends": "@istanbuljs/nyc-config-typescript",
  "all": true,
  "check-coverage": true,
  "include": [
    "src/**/*.{js,jsx,ts,tsx}"
  ],
  "exclude": [
    "src/**/*.cy.{js,jsx,ts,tsx}",
    "src/**/*.test.{js,jsx,ts,tsx}",
    "src/setupTests.ts",
    "src/env.d.ts",
    "src/index.tsx",
    "coverage/**/*",
    "cypress/**/*",
    "build/**/*"
  ],
  "reporter": [
    "text",
    "text-summary",
    "html",
    "lcov"
  ],
  "report-dir": "coverage",
  "lines": 80,
  "statements": 80,
  "functions": 80,
  "branches": 80
}
