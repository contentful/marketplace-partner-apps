{
  "name": "markup-ai-contentful-app",
  "version": "1.1.0",
  "private": false,
  "homepage": ".",
  "type": "module",
  "scripts": {
    "add-locations": "contentful-app-scripts add-locations",
    "build": "npm run type-check && vite build",
    "create-app-definition": "contentful-app-scripts create-app-definition",
    "dev": "vite",
    "format": "prettier . --write",
    "install-ci": "npm ci",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "openapi-ts": "npm run filter-openapi && openapi-ts",
    "filter-openapi": "node scripts/filter-openapi.js",
    "preview": "vite preview",
    "start": "vite",
    "test": "vitest --run",
    "test:coverage": "vitest --run --coverage",
    "type-check": "tsc --noEmit",
    "upload": "contentful-app-scripts upload --bundle-dir ./build",
    "upload-ci": "contentful-app-scripts upload --ci --bundle-dir ./build --organization-id $CONTENTFUL_ORG_ID --definition-id $CONTENTFUL_APP_DEF_ID --token $CONTENTFUL_ACCESS_TOKEN"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "dependencies": {
    "@codemirror/lang-html": "^6.4.11",
    "@codemirror/lang-markdown": "^6.4.0",
    "@codemirror/merge": "^6.11.0",
    "@codemirror/state": "^6.5.2",
    "@codemirror/view": "^6.38.5",
    "@contentful/app-sdk": "^4.45.0",
    "@contentful/f36-components": "^5.6.0",
    "@contentful/f36-tokens": "^5.1.0",
    "@contentful/react-apps-toolkit": "^1.2.16",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@tanstack/react-query": "^5.90.2",
    "contentful-management": "^11.60.4",
    "diff": "^8.0.2",
    "dompurify": "^3.2.7",
    "i18next": "^25.6.0",
    "markdown-it": "^14.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@contentful/app-scripts": "^2.5.5",
    "@emotion/jest": "^11.13.0",
    "@eslint/js": "^9.37.0",
    "@hey-api/openapi-ts": "0.85.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@types/markdown-it": "^14.1.2",
    "@types/node": "^24.7.1",
    "@types/react": "^18.3.26",
    "@types/react-dom": "^18.3.7",
    "@vitejs/plugin-react": "^5.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^10.1.0",
    "eslint": "^9.37.0",
    "jsdom": "^27.0.0",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2",
    "vite": "^7.1.12",
    "vitest": "^3.2.4"
  }
}
