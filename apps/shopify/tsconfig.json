{
  "compilerOptions": {
    "skipLibCheck": true,
    "outDir": "./lib",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "jsx": "react-jsx",
    "rootDir": "./src",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "lib": [
      "es6",
      "dom",
      "es2017"
    ],
    "resolveJsonModule": true,
    "declaration": true,
  },
  "files": [
    "./src/index.tsx"
  ],
  "exclude": [
    "node_modules",
    "lib",
    "**/*.stories.tsx",
    "src/__mocks__"
  ]
}